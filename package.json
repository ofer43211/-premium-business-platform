{
  "name": "premium-business-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Complete enterprise SaaS platform with AI chatbot, multi-language support (Hebrew RTL), A/B testing, push notifications, and Stripe billing",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "test:web": "npm run test -w packages/web",
    "test:mobile": "npm run test -w packages/mobile",
    "test:api": "npm run test -w packages/api",
    "test:shared": "npm run test -w packages/shared",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:coverage:report": "node scripts/merge-coverage.js",
    "test:e2e": "npm run test:e2e -w packages/e2e",
    "test:e2e:web": "playwright test",
    "test:e2e:mobile": "detox test",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "firebase:emulators": "firebase emulators:start",
    "firebase:emulators:test": "firebase emulators:exec --only firestore,auth,functions 'npm run test:api'",
    "precommit": "npm run lint && npm run type-check && npm run test:coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@firebase/rules-unit-testing": "^3.0.2",
    "@playwright/test": "^1.41.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-native": "^12.4.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/react": "18.2.48",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "babel-jest": "^29.7.0",
    "detox": "^20.16.3",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^13.0.3",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "msw": "^2.1.2",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
