# ======================
# Firebase Configuration
# ======================

# Firebase Project Config
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Service Account)
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/serviceAccountKey.json

# Firebase Emulators (for testing)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# ======================
# Stripe Configuration
# ======================

# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx

# Stripe Webhook Secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# Stripe Product/Price IDs
STRIPE_PRICE_BASIC_MONTHLY=price_xxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PRO_MONTHLY=price_xxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_BASIC_YEARLY=price_xxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxxxxxxxxxxxxxxxxx

# ======================
# OpenAI Configuration
# ======================

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
OPENAI_ORGANIZATION_ID=org-xxxxxxxxxxxxxxxxxxxx (optional)

# OpenAI Model Settings
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ======================
# Application Settings
# ======================

# Environment
NODE_ENV=development

# App URLs
WEB_APP_URL=http://localhost:3000
API_URL=http://localhost:5001

# Session Settings
SESSION_SECRET=your_session_secret_here_min_32_characters
JWT_SECRET=your_jwt_secret_here_min_32_characters
JWT_EXPIRY=7d

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# ======================
# Email Configuration
# ======================

# SMTP Settings (e.g., SendGrid, Mailgun, Gmail)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key

# Email From
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Premium Platform

# ======================
# Push Notifications
# ======================

# FCM Server Key
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=123456789012

# VAPID Keys (for Web Push)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ======================
# A/B Testing
# ======================

# Analytics
ANALYTICS_ID=UA-XXXXXXXXX-X
GTM_ID=GTM-XXXXXXX

# ======================
# Security
# ======================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Monitoring & Logging
# ======================

# Sentry DSN (error tracking)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxx@sentry.io/1234567

# Log Level
LOG_LEVEL=debug

# ======================
# Storage
# ======================

# Redis (for caching, sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password (optional)

# ======================
# Feature Flags
# ======================

# Enable/Disable Features
ENABLE_CHAT=true
ENABLE_AB_TESTING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# ======================
# Development
# ======================

# Debug Mode
DEBUG=true

# Bypass Authentication (development only)
BYPASS_AUTH=false

# Mock External Services
MOCK_STRIPE=false
MOCK_OPENAI=false

# ======================
# Testing
# ======================

# Test Database
TEST_DATABASE_URL=postgresql://localhost:5432/premium_platform_test

# CI/CD
CI=false
